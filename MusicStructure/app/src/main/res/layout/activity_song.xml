<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ankur.musicstructure.SongActivity">

    <TextView
        android:id="@+id/songLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="Songs List"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:background="#ff6092"
        android:textColor="#ffffff"
        app:layout_constraintTop_toBottomOf="@id/menuSongs"/>

    <LinearLayout
        android:id="@+id/menuSongs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/songimage"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

    <Button
        android:id="@+id/nowPBSongs"
        android:background="@drawable/button_border"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_weight="1"
        android:text="Now Playing"
        />
    <Button
        android:id="@+id/albumsBSongs"
        android:background="@drawable/button_border"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Albums" />
    <Button
        android:id="@+id/spotifyBSongs"
        android:background="@drawable/button_border"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Spotify" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/songLabel"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Song 1"
                android:textColor="#000000"
                android:textSize="25sp"
                android:padding="10dp"
                android:background="@drawable/button_border1"
                android:layout_margin="2dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Song 2"
                android:textColor="#000000"
                android:textSize="25sp"
                android:padding="10dp"
                android:background="@drawable/button_border1"
                android:layout_margin="2dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Song 3"
                android:textColor="#000000"
                android:textSize="25sp"
                android:padding="10dp"
                android:background="@drawable/button_border1"
                android:layout_margin="2dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Song 4"
                android:textColor="#000000"
                android:textSize="25sp"
                android:padding="10dp"
                android:background="@drawable/button_border1"
                android:layout_margin="2dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Song 5"
                android:textColor="#000000"
                android:textSize="25sp"
                android:padding="10dp"
                android:background="@drawable/button_border1"
                android:layout_margin="2dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Song 6"
                android:textColor="#000000"
                android:textSize="25sp"
                android:padding="10dp"
                android:background="@drawable/button_border1"
                android:layout_margin="2dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Song 7"
                android:textColor="#000000"
                android:textSize="25sp"
                android:padding="10dp"
                android:background="@drawable/button_border1"
                android:layout_margin="2dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Song 8"
                android:textColor="#000000"
                android:textSize="25sp"
                android:padding="10dp"
                android:background="@drawable/button_border1"
                android:layout_margin="2dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Song 9"
                android:textColor="#000000"
                android:textSize="25sp"
                android:padding="10dp"
                android:background="@drawable/button_border1"
                android:layout_margin="2dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Song 10"
                android:textColor="#000000"
                android:textSize="25sp"
                android:padding="10dp"
                android:background="@drawable/button_border1"
                android:layout_margin="2dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This activity displays all the songs available."
                android:textColor="#000000"
                android:textSize="20sp"
                android:padding="10dp"
                android:background="@drawable/button_border1"
                android:layout_margin="2dp"/>
            <Space
                android:layout_width="match_parent"
                android:layout_height="200dp" />
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
