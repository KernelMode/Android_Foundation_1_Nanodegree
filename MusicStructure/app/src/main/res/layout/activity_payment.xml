<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ankur.musicstructure.PaymentActivity">

    <TextView
        android:id="@+id/payLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ff6092"
        android:paddingBottom="3dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="3dp"
        android:text="Buy Premium"
        android:textColor="#ffffff"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/payment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:src="@drawable/pay"
        android:scaleType="centerCrop"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/payLabel" />

    <Button
        android:id="@+id/paybutton"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buy With Android Pay"
        app:layout_constraintTop_toBottomOf="@id/payment"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="15sp"
        android:textColor="#000000"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/paybutton"
        android:layout_margin="10dp"
        android:text="This Activity allows the user to upgrade to Premium Account by using Android Pay API"/>

    <Button
        android:id="@+id/MainMenuB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back To Main Menu"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        style="?android:attr/buttonBarButtonStyle"
        android:background="@drawable/button_border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/paybutton"
        app:layout_constraintVertical_bias="1.0" />

</android.support.constraint.ConstraintLayout>
